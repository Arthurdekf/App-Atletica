<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientbg">

        <View
            android:id="@+id/whiteSquare"
            android:layout_width="match_parent"
            android:layout_height="393dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white2" />


        <androidx.cardview.widget.CardView
            android:id="@+id/centeredWhiteView"
            android:layout_width="320dp"
            android:layout_height="600dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageButton
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    android:onClick="btnVoltar" />

                <ImageView
                    android:layout_width="109dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/edit_note" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Registrar-se"
                    android:textColor="@color/blue"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NOME COMPLETO" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-MAIL" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/senhaEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SENHA"
                    android:inputType="textPassword" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/senhaConfirmText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CONFIRMAR SENHA"
                    android:inputType="textPassword" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <Spinner
                    android:id="@+id/spinnerDropdown"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <CheckBox
                    android:id="@+id/myCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receber notÃ­cias e avisos por e-mail."
                    android:checked="false" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="100dp">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="218dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="80dp"
                android:backgroundTint="@color/blue"
                android:elevation="100dp"
                android:text="Confirmar"
                android:textSize="25dp"
                android:textColor="@color/white"/>

        </FrameLayout>


    </RelativeLayout>
</RelativeLayout>
